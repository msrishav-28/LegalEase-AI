# Database Configuration
DATABASE_URL=postgresql+asyncpg://legalease_user:legalease_password@localhost:5432/legalease_ai
POSTGRES_DB=legalease_ai
POSTGRES_USER=legalease_user
POSTGRES_PASSWORD=legalease_password

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# RabbitMQ Configuration
RABBITMQ_URL=amqp://legalease_user:legalease_password@localhost:5672/
RABBITMQ_DEFAULT_USER=legalease_user
RABBITMQ_DEFAULT_PASS=legalease_password

# Application Security
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# AI/ML Service Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-1106-preview
OPENAI_MAX_TOKENS=4096

# Vector Database Configuration
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=legalease-documents

# File Upload Configuration
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_TYPES=pdf,doc,docx,txt
UPLOAD_DIR=./uploads

# Application Configuration
DEBUG=false
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,http://localhost:80

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
NEXT_PUBLIC_MAX_FILE_SIZE=104857600

# Development Configuration
RELOAD=true
WORKERS=1

# Production Configuration (uncomment for production)
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/key.pem
# DOMAIN=yourdomain.com